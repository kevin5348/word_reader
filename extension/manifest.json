{
    "manifest_version": 3,
    "name": "Word Reader",
    "version": "1.0",
    "description": "Highlights difficult words on web pages and translates them",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "https://translate.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}